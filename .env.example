# Database Service API (Required)
DATABASE_SERVICE_URL=http://localhost:8001
DATABASE_SERVICE_SECRET=your-super-secret-database-service-key

# Legacy MongoDB Settings (Optional, for backward compatibility)
MONGODB_URI=mongodb://username:password@localhost:27017
MONGODB_DATABASE=hackit_sso

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
MAGIC_LINK_TOKEN_EXPIRE_MINUTES=15

# OIDC Configuration
OIDC_ISSUER=https://sso.hackit.tw
OIDC_KEY_ID=hackit-sso-key-1

# Email Configuration (Gmail SMTP)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=your-email@gmail.com
MAIL_PORT=465
MAIL_SERVER=smtp.gmail.com
MAIL_STARTTLS=false
MAIL_SSL_TLS=true
USE_CREDENTIALS=true
VALIDATE_CERTS=true

# Cloudflare Turnstile
TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key 